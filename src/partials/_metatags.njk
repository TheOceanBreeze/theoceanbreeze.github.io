{% macro defaulttags(ttitle) %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ ttitle }}</title>
{% endmacro %}

{% macro opengraph(otitle, description, ourl, site_name, type) %}
  <meta property="og:title" content="{{ otitle }}"/>
  <meta property="og:description" content="{{ description }}"/>
  <meta property="og:url" content="{{ ourl }}"/>
  <meta property="og:site_name" content="{{ site_name }}"/>
  <meta property="og:type" content="{{ type }}"/>
  <meta property="og:locale" content="en_US"/>
{% endmacro %}

{% macro meta(description, canonical, author, keywords) %}
  <meta name="description" content="{{ description }}">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href="{{ canonical }}">
  <meta name="author" content="{{ author }}">
  <meta name="generator" content="{{ eleventy.generator }}">
  <meta name="keywords" content="{{ keywords }}">
{% endmacro %}

{% macro twitter(card, creator) %}
  <meta name="twitter:card" content="{{ card }}">
  <meta name="twitter:creator" content="{{ creator }}">
{% endmacro %}

{% macro render_metatags(mtitle, description, url, site_name, author, type, keywords) %}
  {{ defaulttags(mtitle) }}
  {{ opengraph(mtitle, description, url, site_name, type) }}
  {{ twitter(description, author) }}
  {{ meta(description, url, author, keywords) }}
{% endmacro %}

